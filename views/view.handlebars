<table>
  <thead>
    <tr>
      <th>File Name</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each files}}
      <tr>
        <td><a href="/api/download/{{this.serial}}">{{this.name}}</a></td>
        <td><a href="/pages/edit/{{this.serial}}">edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
<h1>{{message}}</h1>

<script>
  const table = document.querySelector('table');
  table.addEventListener('click', evt => {
    const href = evt.target.getAttribute('href');
    if (href && href.indexOf('edit') !== -1) {
      if (evt.target.dataset.clicked) {
        evt.preventDefault();
        console.log('waiting for data fetching, be patient!!');
      } else {
        evt.target.dataset.clicked = true;
      }
    }
  });
</script>